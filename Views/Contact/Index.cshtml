    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="box">
            <div class="col-lg-12">
                <hr>
                <h2 class="intro-text text-center">
                    Contact <strong>business casual</strong>
                </h2>
                <hr>
            </div>
            <div class="col-md-8">
